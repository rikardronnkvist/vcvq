{
  "name": "vcvq",
  "version": "1.0.0",
  "description": "Vibe Coded Vibe Quiz - Real-time multiplayer quiz game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --test tests/**/*.test.js",
    "test:fuzz": "node --test tests/fuzz/**/*.fuzz.test.js",
    "test:fuzz:verbose": "node --test --test-reporter=spec tests/fuzz/**/*.fuzz.test.js",
    "test:coverage": "c8 --reporter=lcov --reporter=text --exclude='tests/**' --exclude='public/**' npm test",
    "test:coverage:all": "c8 --reporter=lcov --reporter=text --reporter=html --exclude='tests/**' --exclude='public/**' npm test"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "fast-check": "^3.15.0",
    "nodemon": "^3.1.10"
  },
  "overrides": {
    "supports-color": "^10.2.2",
    "minimatch": "^10.1.1",
    "brace-expansion": "^4.0.1"
  }
}
