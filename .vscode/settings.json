{
  // Enable custom vibe prompts
  "chat.promptFiles": true,
  "chat.promptFilesLocations": {
    ".github/prompts": true,
    "prompts": true
  },
  "chat.customCommands": {
    "vibe": {
      "description": "Get VCVQ project-specific suggestions",
      "context": "Use the VCVQ (Vibe Coded Vibe Quiz) project context to provide specific, actionable suggestions focused on Tesla-optimized quiz game development.",
      "helpText": "Type /vibe followed by your question about VCVQ development"
    }
  },
  "chat.promptPrefix.vibe": "As a VCVQ developer assistant, focus on: Tesla browser compatibility, clean code patterns, and security requirements from prompts/",

  // Markdown settings for prompts
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // File associations for prompts directory
  "files.associations": {
    "prompts/*.md": "markdown",
    ".github/copilot-instructions.md": "markdown"
  },

  // Workspace dictionary for project-specific terms
  "cSpell.words": [
    "VCVQ",
    "Gemini",
    "sessionStorage"
  ],

  // Markdown preview settings
  "markdown.preview.breaks": true,
  "markdown.preview.doubleClickToSwitchToEditor": true,
  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,

  // Extensions recommendations
  "extensions.recommendations": [
    "yzhang.markdown-all-in-one",
    "esbenp.prettier-vscode",
    "DavidAnson.vscode-markdownlint"
  ]
}